<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        app:endIconMode="clear_text"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <EditText
            android:id="@+id/edtSuaTenNguoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_person_24"
            android:hint="Tên người dùng"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/pink" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        app:hintEnabled="false"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <EditText
            android:id="@+id/edtSuaTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_login_24"
            android:hint="Tên đăng nhập"
            android:maxLines="1"
            android:inputType="none"
            android:imeOptions="actionNext"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        app:hintEnabled="false"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

        <EditText
            android:id="@+id/edtSuaMatKhauNguoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_lock_24"
            android:hint="Mật khẩu"
            android:maxLines="1"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        app:hintEnabled="false"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

        <EditText
            android:id="@+id/edtNhapLaiMatKhauNguoidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_lock_24"
            android:hint="Nhập lại mật khẩu"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="2"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/btnHuySuaNguoiDung"
            android:layout_weight="1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Hủy"
            android:textSize="22dp"
            android:textColor="@color/pink"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/pink"
            app:strokeWidth="1dp"
            />
        <Button
            android:id="@+id/btnDongYSuaNguoiDung"
            android:layout_weight="1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Lưu"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/pink"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/pink"
            app:strokeWidth="1dp" />
    </LinearLayout>
</LinearLayout>