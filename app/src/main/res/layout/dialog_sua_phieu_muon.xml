<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        app:hintEnabled="false"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <AutoCompleteTextView
            android:id="@+id/edtSuaThanhVienPhieuMuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/ic_person_24"
            android:drawablePadding="10dp"
            android:hint="Tên thành viên"
            android:maxLines="1"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        app:hintEnabled="false"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <AutoCompleteTextView
            android:id="@+id/edtSuaSachPhieuMuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/ic_book_24"
            android:drawablePadding="10dp"
            android:hint="Tên sách"
            android:maxLines="1"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColorHint="@color/pink"
        app:hintEnabled="false"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/edtSuaGiaThuePhieuMuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá thuê"
            android:padding="10dp"
            android:inputType="none"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_payment_24"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textColorHint="@color/pink"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:hintEnabled="false"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/edtSuaNgayThuePhieuMuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày thuê"
            android:padding="10dp"
            android:inputType="none"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_calendar_today_24"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textColorHint="@color/pink" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/ckbDaTraSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã trả sách"
        android:textSize="18sp"
        app:buttonTint="@color/pink"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="2"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/btnHuySuaPhieuMuon"
            android:layout_weight="1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Hủy"
            android:textSize="22dp"
            android:textColor="@color/pink"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/pink"
            app:strokeWidth="1dp"
            />
        <Button
            android:id="@+id/btnDongYSuaPhieuMuon"
            android:layout_weight="1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Lưu"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/pink"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/pink"
            app:strokeWidth="1dp"
            />
    </LinearLayout>



</LinearLayout>