<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/edtSuaTenSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_book_24"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:hint="Tên sách"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/edtSuaGiaThue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_payment_24"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:hint="Giá thuê"
            android:maxLines="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

        <AutoCompleteTextView
            android:id="@+id/edtSuaTheLoaiSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/ic_category_24"
            android:drawablePadding="10dp"
            android:hint="Thể loại"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/pink" />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="2"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/btnHuySuaSach"
            android:layout_weight="1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Hủy"
            android:textSize="22dp"
            android:textColor="@color/pink"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/pink"
            app:strokeWidth="1dp"
            />
        <Button
            android:id="@+id/btnDongYSuaSach"
            android:layout_weight="1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Lưu"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/pink"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/pink"
            app:strokeWidth="1dp"
            />
    </LinearLayout>
</LinearLayout>