<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/edtSuaTenThanhVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_person_24"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Tên thành viên"
            android:imeOptions="actionNext"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/edtSuaNamSinhThanhVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_calendar_today_24"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:hint="Năm sinh"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"/>

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="2"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/btnHuySuaThanhVien"
            android:layout_weight="1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Hủy"
            android:textSize="22dp"
            android:textColor="@color/pink"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/pink"
            app:strokeWidth="1dp"
            />
        <Button
            android:id="@+id/btnDongYSuaThanhVien"
            android:layout_weight="1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Lưu"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/pink"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/pink"
            app:strokeWidth="1dp"
            />
    </LinearLayout>
</LinearLayout>